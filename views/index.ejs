<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <title>
    <%= title %>
  </title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Style sheets -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <!-- 3rd party scripts -->
  <script src="/javascripts/libs/jquery.min.js"></script>
  <script src="/javascripts/libs/jquery-ui.min.js"></script>
  <script src="/javascripts/libs/popper.min.js"></script>
  <script src="/javascripts/libs/bootstrap.min.js"></script>
  <script src="/javascripts/libs/chart.min.js"></script>
  <script src="/javascripts/libs/pixi.min.js"></script>
  <!-- Setup config   -->
  <script>
    var CONFIG = {
      birthRate: 112,
      predationRate: 40,
      env: { red: 235, green: 35, blue: 35 },
      avg: { red: 128, green: 128, blue: 128 }
    }
  </script>
</head>

<body>
  <div class="container-fluid">
    <div class="row">
      <div id="cpanel" class="col-lg-4">
        <div class="jumbotron jumbotron-fluid">
          <div class="container">
            <h1 class="display-4">Evolved</h1>
            <p class="lead">By Dev-Leopard</p>
          </div>
        </div>
        <div class="container">
          <div class="row">
            <div class="col-lg-6">
              <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Birth Rate
                  <span id="birthRate" class="badge badge-primary badge-pill">14</span>
                </li>
                <li id="birthSlide"></li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Predation Rate
                  <span id="predationRate" class="badge badge-primary badge-pill">14</span>
                </li>
                <li id="predationSlide"></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="container">
          <canvas id="myChart" style="background-color: whitesmoke;"></canvas>
        </div>
      </div>
      <div id="app" class="col-lg-8"></div>
    </div>
  </div>
  <!-- application scripts -->
  <script src="/javascripts/controls.setup.js"></script>
  <script src="/javascripts/report.chart.js"></script>
  <script src="/javascripts/models/colour.js"></script>
  <script src="/javascripts/models/creature.js"></script>
  <script src="/javascripts/models/creaturefactory.js"></script>
  <script src="/javascripts/simulation.js"></script>
</body>

</html>